            android:layout_alignParentTop="true"
            android:layout_marginLeft="299dp"
            android:layout_marginTop="255dp"
            android:text="A6"
            android:textSize="17dp"/>

        <Button
            android:id="@+id/button_a7"
            android:layout_width="49dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="527dp"
            android:text="A7"
            android:textSize="17dp"/>

        <Button
            android:id="@+id/button_a8"
            android:layout_width="wrap_content"
            android:layout_height="131dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="363dp"
            android:layout_marginTop="328dp"
            android:text="A8"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/button_a9"
            android:layout_width="47dp"
            android:layout_height="76dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="443dp"
            android:text="A9"
            android:textSize="17dp" />

        <Button
            android:id="@+id/button_a10"
            android:textSize="20dp"
            android:layout_width="75dp"
            android:layout_height="115dp"
            android:layout_below="@+id/button_a7"
            android:layout_alignParentStart="true"
            android:layout_marginStart="299dp"
            android:layout_marginLeft="317dp"
