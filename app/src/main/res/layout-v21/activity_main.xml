<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    android:background="@drawable/csuci_map"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar

            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:alpha="1.5"
            android:filterTouchesWhenObscured="true"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/toolbar_title" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/coneLot1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="180dp"
            android:elevation="100dp"
            android:src="@drawable/cone" />

        <ImageView
            android:id="@+id/coneLot2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="120dp"
            android:elevation="100dp"
            android:src="@drawable/cone" />

        <ImageView
            android:id="@+id/coneLot3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="25dp"
            android:elevation="100dp"
            android:src="@drawable/cone" />

        <ImageView
            android:id="@+id/coneLot4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="120dp"
            android:elevation="100dp"
            android:src="@drawable/cone" />

        <ImageView
            android:id="@+id/coneLot5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="410dp"
            android:elevation="100dp"
            android:src="@drawable/cone" />

        <ImageView
            android:id="@+id/coneLot6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="230dp"
            android:elevation="100dp"
            android:src="@drawable/cone" />

        <ImageView
            android:id="@+id/coneLot7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="510dp"
            android:elevation="100dp"
            android:src="@drawable/cone" />

        <ImageView
            android:id="@+id/coneLot8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="310dp"
            android:elevation="100dp"
            android:src="@drawable/cone" />

        <ImageView
            android:id="@+id/coneLot9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="420dp"
            android:elevation="100dp"
            android:src="@drawable/cone" />

        <ImageView
            android:id="@+id/coneLot10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="600dp"
            android:elevation="100dp"
            android:src="@drawable/cone" />

        <ImageView
            android:id="@+id/coneLot11"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:elevation="100dp"
            android:src="@drawable/cone" />

        <Button
            android:id="@+id/button_a1"
            android:layout_width="47dp"
            android:layout_height="128dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="202dp"
            android:text="A1"
            android:textSize="17dp"/>

        <Button
            android:id="@+id/button_a2"
            android:layout_width="67dp"
            android:layout_height="83dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="335dp"
            android:layout_marginTop="143dp"
            android:text="A2"
            android:textSize="17dp" />

        <Button
            android:id="@+id/button_a3"
            android:layout_width="179dp"
            android:layout_height="58dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="43dp"
            android:text="A3"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/button_a4"
            android:layout_width="45dp"
            android:layout_height="86dp"
            android:layout_below="@+id/button_a3"
            android:layout_marginLeft="30dp"
